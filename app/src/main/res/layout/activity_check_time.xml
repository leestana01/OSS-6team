<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Main"
    tools:context=".CheckTime">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="306dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/set_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/and_or_swith"
        app:layout_constraintVertical_bias="0.5">


        <CheckBox

            android:id="@+id/checkbox_1st_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:background="@drawable/custom_checkbox"
            android:textColor="#ffffffff"
            android:fontFamily="@font/suite"
            android:textSize="18dp"

            android:text="@string/Time_lec1" />

        <CheckBox
            android:id="@+id/checkbox_2nd_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:background="@drawable/custom_checkbox"
            android:textColor="#ffffffff"
            android:fontFamily="@font/suite"
            android:textSize="18dp"
            android:text="@string/Time_lec2" />

        <CheckBox
            android:background="@drawable/custom_checkbox"
            android:id="@+id/checkbox_3rd_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/suite"
            android:textSize="18dp"
            android:text="@string/Time_lec3" />

        <CheckBox
            android:background="@drawable/custom_checkbox"
            android:id="@+id/checkbox_4th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/suite"
            android:textSize="18dp"
            android:text="@string/Time_lec4" />

        <CheckBox
            android:background="@drawable/custom_checkbox"
            android:id="@+id/checkbox_5th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/suite"
            android:textSize="18dp"
            android:text="@string/Time_lec5" />

        <CheckBox
            android:id="@+id/checkbox_6th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:background="@drawable/custom_checkbox"
            android:fontFamily="@font/suite"
            android:text="@string/Time_lec6"
            android:textColor="#ffffffff"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/checkbox_7th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:background="@drawable/custom_checkbox"
            android:fontFamily="@font/suite"
            android:text="@string/Time_lec7"
            android:textColor="#ffffffff"
            android:textSize="18dp" />

        <CheckBox
            android:background="@drawable/custom_checkbox"
            android:id="@+id/checkbox_8th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/suite"
            android:textSize="18dp"
            android:text="@string/Time_lec8" />

        <CheckBox
            android:id="@+id/checkbox_9th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:background="@drawable/custom_checkbox"
            android:fontFamily="@font/suite"
            android:text="@string/Time_lec9"
            android:textColor="#ffffffff"
            android:textSize="18dp" />


    </LinearLayout>

    <Button
        android:id="@+id/set_button"
        android:layout_width="359dp"
        android:layout_height="55dp"
        android:text="@string/Time_Set_Complete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.5" />


    <Switch
        android:id="@+id/and_or_swith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:text="@string/Time_Config"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml"
        tools:layout_editor_absoluteY="160dp" />

    <Switch
        android:id="@+id/and_or_swith_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="180dp"
        android:text="Satisfy with everything"
        android:textSize="16dp"
        android:textColor="#ffffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml"
        tools:layout_editor_absoluteY="160dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="MainActivity"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="-10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/suite"
        android:gravity="center"
        android:text="[Global Campus]"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/suite"
        android:gravity="center"
        android:text="please check want time!"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="89dp" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>