        android:layout_marginEnd="10dp"
        android:text="@string/global3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seoul_town5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/seoul_town3"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="@string/global4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seoul_town2"
        app:layout_constraintVertical_bias="0.012" />

    <Button
        android:id="@+id/seoul_town4"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="@string/global5"
        app:layout_constraintBottom_toBottomOf="parent"
